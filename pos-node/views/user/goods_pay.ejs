<%- include header%>
<div class="cart container">
    <div class="panel panel-default">
        <div class="panel-heading"><h3>购物清单</h3></div>
        <div class="panel-body">
            <h4></h4>
            <table class="table table-bordered text-center">
                <thead id="item">
                <tr>
                    <td class="col-lg-2">分类</td>
                    <td class="col-lg-2">名称</td>
                    <td class="col-lg-2">单价(元)</td>
                    <td class="col-lg-2">单位</td>
                    <td class="col-lg-2">数量</td>
                    <td class="col-lg-2">小计</td>
                </tr>
                </thead>
                <tbody>
                <%goods.forEach(function(item){%>
                <tr>
                    <td><%= item.type%></td>
                    <td><%= item.name%></td>
                    <td><%= item.price%></td>
                    <td><%= item.unit%></td>
                    <td><%= item.number%></td>
                    <td><%= item.summary_display%></td>
                </tr>
                <%})%>
                </tbody>
            </table>
        </div>
        <div class="panel-heading"><h3 class="title">赠送商品</h3></div>
        <div class="body panel-body">
            <table class="table table-bordered text-center">
                <thead id="promotion-item">
                <tr>
                    <td class="col-lg-4">分类</td>
                    <td class="col-lg-4">名称</td>
                    <td class="col-lg-4">数量</td>
                </tr>
                </thead>
                <tbody>
                <%free_goods.forEach(function(item){%>
                <tr>
                    <td><%= item.type%></td>
                    <td><%= item.name%></td>
                    <td><%= item.number%></td>
                </tr>
                <%})%>
                </tbody>
            </table>
        </div>
        <div>
            <form role="form" class="pull-right">
                <div class="form-group">
                    <label class="pull-right h4">总计：<span><%= summary_price%></span>元</label>
                </div>
                <div class="form-group">
                    <label class="pull-right h4">节省：<span><%= promotion_price%></span>元</label>
                </div>
                <div class="form-group">
                    <a href="comfirm"><button type="button" class="sure btn btn-lg btn-primary pull-right">确认</button></a>
                </div>
            </form>
        </div>
    </div>
</div>
</body>
</html>